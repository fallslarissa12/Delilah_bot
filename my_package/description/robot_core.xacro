<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
       <!--  <origin xyz="-0.001 0 0"/> -->
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.029795"/>
            <geometry>
                <box size="0.381 0.1905 0.09525"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.029795"/>
            <geometry>
                <box size="0.381 0.1905 0.09525"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="2.26" x="0.381" y="0.1905" z="0.09525">
            <origin xyz="0 0 0.029795" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>
    
    <!-- Left Front Wheel -->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.09525 0.111 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" length="0.003" radius="0.0508">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Right Front Wheel -->

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.09525 -0.111 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" length="0.003" radius="0.0508">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Left Back Wheel -->

    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.09525 0.111 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" length="0.003" radius="0.0508">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Right back Wheel -->

    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="-0.09525 -0.111 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0508" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" length="0.003" radius="0.0508">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


</robot>